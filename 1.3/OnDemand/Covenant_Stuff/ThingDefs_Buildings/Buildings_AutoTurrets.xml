	<ThingDef ParentName="BaseBullet">
		<defName>O21_Halo_CovMortarPlasmaAuto_Bullet</defName>
		<label>fuel rod shot</label>
		<graphicData>
			<texPath>HaloRE/Projectile/FuelRodShot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
			<damageDef>O21_Halo_Damage_FuelRodCannon</damageDef>
			<explosionRadius>2.6</explosionRadius>
			<damageAmountBase>30</damageAmountBase>
			<armorPenetrationBase>0.2</armorPenetrationBase>
			<stoppingPower>3</stoppingPower>
			<speed>30</speed>
			<flyOverhead>true</flyOverhead>
			<soundExplode>O21_Halo_Covenant_FuelRodCannonImpact</soundExplode>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseWeaponTurret">
		<defName>O21_Halo_CovMortarPlasmaAuto_Gun</defName>
		<label>heavy plasma turret</label>
		<description>A self-loading large-bore cannon designed to attach to a turret.</description>
		<graphicData>
			<texPath>HaloRE/Building/Security/Covenant/CovHeavyTurret_Head</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(7, 7)</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<destroyOnDrop>true</destroyOnDrop>
		<tradeability>None</tradeability>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<AccuracyTouch>0.25</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.60</AccuracyMedium>
			<AccuracyLong>0.45</AccuracyLong>
			<RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>40</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<forceNormalTimeSpeed>false</forceNormalTimeSpeed>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>O21_Halo_Bullet_FuelRodCannon</defaultProjectile>
				<warmupTime>1.3</warmupTime>
				<minRange>3</minRange>
				<range>49.9</range>
				<isMortar>true</isMortar>
				<ticksBetweenBurstShots>50</ticksBetweenBurstShots>
        		<requireLineOfSight>false</requireLineOfSight>
        		<ai_AvoidFriendlyFireRadius>3</ai_AvoidFriendlyFireRadius>
