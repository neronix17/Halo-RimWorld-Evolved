	<ThingDef ParentName="ArmorMachineableBase">
		<defName>O21_Halo_UNSC_fatigues</defName>
		<label>unsc fatigues</label>
		<techLevel>Spacer</techLevel>
		<description>Fatigues commonly worn by UNSC Marines.</description>
		<graphicData>
			<texPath>HaloRE/Apparel/MarineFatigues/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>O21_Halo_UNSCArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
            <!--<recipeUsers Inherit="False">
                <li>O21_Halo_Covenant_ArmouryBench</li>
            </recipeUsers>-->
		</recipeMaker>
		<costList>
			<Cloth>40</Cloth>
		</costList>
		<statBases>
			<Mass>4</Mass>
			<WorkToMake>8000</WorkToMake>
			<MaxHitPoints>600</MaxHitPoints>
			<MarketValue>500</MarketValue>
			<Insulation_Cold>30</Insulation_Cold>
			<Insulation_Heat>30</Insulation_Heat>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<tradeTags>
			<li>UNSCApparel</li>
		</tradeTags>
		<apparel>
			<tags>
				<li>UNSCApparel</li>
				<li>UNSCFatigues</li>
				<li>UNSCMarine</li>
			</tags>
			<wornGraphicPath>HaloRE/Apparel/MarineFatigues/Apparel</wornGraphicPath>
			<useWornGraphicMask>True</useWornGraphicMask>
			<layers>
				<li>OnSkin</li>
			</layers>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>
	
