<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BaseMakeableGun" Name="UNSCPistol">
		<defName>O21_Halo_UNSCPistol</defName>
		<label>UNSC Pistol</label>
		<description>A standard issue pistol used by the UNSC.</description>
		<graphicData>
			<texPath>HaloRE/Weapon/UNSC/UNSC_Pistol</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.0</drawSize>			
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>4000</WorkToMake>
			<Mass>1.2</Mass>
			<AccuracyTouch>0.40</AccuracyTouch>
			<AccuracyShort>0.48</AccuracyShort>
			<AccuracyMedium>0.39</AccuracyMedium>
			<AccuracyLong>0.25</AccuracyLong>
			<RangedWeapon_Cooldown>0.5</RangedWeapon_Cooldown>
		</statBases>
		<techLevel>Spacer</techLevel>
		<weaponTags>
			<li>UNSCWeapon</li>
			<li>UNSCRanged</li>
			<li>UNSCPistol</li>
		</weaponTags>
		<tradeTags>
			<li>UNSCRanged</li>
		</tradeTags>
		<costList>
			<Steel>40</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<researchPrerequisite>O21_Halo_UNSCWeapons</researchPrerequisite>
		</recipeMaker>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>O21_Halo_Bullet_UNSCPistol</defaultProjectile>
				<warmupTime>0.5</warmupTime>
				<range>26</range>
				<ticksBetweenBurstShots>80</ticksBetweenBurstShots>
				<burstShotCount>1</burstShotCount>
				<soundCast>O21_Halo_UNSC_PistolSound</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>O21_Halo_Bullet_UNSCPistol</defName>
		<label>M6D bullet</label>
		<graphicData>
			<texPath>HaloRE/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>8</damageAmountBase>
			<speed>70</speed>
		</projectile>
	</ThingDef>

	<ThingStyleDef>
		<defName>O21_Halo_InniePistol</defName>
		<description>A standard issue pistol used by the UNSC and 'aquired' by the Innies.</description>
		<graphicData>
			<texPath>HaloRE/Weapon/UNSC/Innie_Pistol</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingStyleDef>

</Defs>